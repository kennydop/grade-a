<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@style.css"
  xmlns="http://javafx.com/javafx/20.0.1"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradea.FinishedController">
  <left>
    <VBox spacing="10.0">
      <children>
        <StackPane styleClass="card">
          <padding>
            <Insets bottom="40.0" left="20.0" right="20.0" top="40.0" />
          </padding>
          <children>
            <Label fx:id="score" text="100/100">
              <font>
                <Font name="System Bold" size="48.0" />
              </font>
            </Label>
          </children>
        </StackPane>
      </children>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>
  </left>
  <center>
    <ScrollPane BorderPane.alignment="CENTER">
      <content>
        <HBox>
          <children>
            <VBox fx:id="reviewQnsCardContainer" prefHeight="200.0" prefWidth="100.0" spacing="15.0" HBox.hgrow="ALWAYS">
              <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
              </padding>
            </VBox>
          </children>
        </HBox>
      </content>
    </ScrollPane>
  </center>
</BorderPane>
