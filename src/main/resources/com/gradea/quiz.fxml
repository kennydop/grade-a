<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradea.QuizController">
  <BorderPane prefHeight="200.0" prefWidth="200.0">
    <center>
      <BorderPane maxWidth="850.0">
        <center>
          <Text fx:id="questionCard" text="Question" BorderPane.alignment="CENTER">
            <font>
              <Font name="Montserrat Regular" size="20.0" />
            </font>
          </Text>
        </center>
        <bottom>
          <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
              <RowConstraints minHeight="40.0" prefHeight="80.0" vgrow="SOMETIMES" />
              <RowConstraints minHeight="40.0" prefHeight="80.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
              <Button fx:id="option1" onAction="#handleOptionClick" styleClass="option" text="Option 1">
                <font>
                  <Font name="Montserrat Regular" size="13.0" />
                </font>
                <GridPane.margin>
                  <Insets bottom="5.0" right="5.0" />
                </GridPane.margin>
              </Button>
              <Button fx:id="option2" onAction="#handleOptionClick" styleClass="option" text="Option 2" GridPane.columnIndex="1">
                <font>
                  <Font name="Montserrat Regular" size="13.0" />
                </font>
                <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" />
                </GridPane.margin>
              </Button>
              <Button fx:id="option3" onAction="#handleOptionClick" styleClass="option" text="Option 3" GridPane.rowIndex="1">
                <font>
                  <Font name="Montserrat Regular" size="13.0" />
                </font>
                <GridPane.margin>
                  <Insets right="5.0" top="5.0" />
                </GridPane.margin>
              </Button>
              <Button fx:id="option4" onAction="#handleOptionClick" styleClass="option" text="Option 4" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <font>
                  <Font name="Montserrat Regular" size="13.0" />
                </font>
                <GridPane.margin>
                  <Insets left="5.0" top="5.0" />
                </GridPane.margin>
              </Button>
            </children>
          </GridPane>
        </bottom>
            <styleClass>
               <String fx:value="fill-height" />
               <String fx:value="card" />
            </styleClass>
      </BorderPane>
      <BorderPane.margin>
        <Insets bottom="30.0" top="30.0" />
      </BorderPane.margin>
      <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
      </padding>
    </center>
    <top>
      <HBox maxWidth="850.0" BorderPane.alignment="CENTER">
        <children>
          <Text fx:id="questionNumber" style="-fx-font-size: 24; -fx-padding: 20px; -fx-background-color: #f5f5f5; -fx-min-width: 500px; -fx-min-height: 200px;">
            <font>
              <Font name="Montserrat Regular" size="18.0" />
            </font>
          </Text>
        </children>
      </HBox>
    </top>
    <bottom>
      <HBox fx:id="navigationBox" alignment="CENTER" maxWidth="850.0" prefHeight="50.0" BorderPane.alignment="CENTER">
        <children>
          <Button fx:id="prevButton" onAction="#handlePrevClick" prefHeight="50.0" text="Prev">
            <font>
              <Font name="Montserrat Regular" size="13.0" />
            </font>
          </Button>
          <Region HBox.hgrow="ALWAYS" />
          <Button fx:id="nextButton" onAction="#handleNextClick" prefHeight="50.0" text="Next">
            <font>
              <Font name="Montserrat Regular" size="13.0" />
            </font>
          </Button>
        </children>
      </HBox>
    </bottom>
  </BorderPane>
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
</StackPane>
