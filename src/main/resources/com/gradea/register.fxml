<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" maxHeight="470.0" maxWidth="400.0" prefHeight="470.0" prefWidth="400.0" spacing="15.0" stylesheets="@style.css"
  xmlns="http://javafx.com/javafx/19"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradea.AuthController">
  <padding>
    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
  </padding>
  <Text text="Create Account">
    <font>
      <Font size="24.0" />
    </font>
  </Text>
  <TextField fx:id="fNameField" prefHeight="40.0" promptText="First Name">
    <font>
      <Font size="13.0" />
    </font>
  </TextField>
  <TextField fx:id="lNameField" prefHeight="40.0" promptText="Last Name">
    <font>
      <Font size="13.0" />
    </font>
  </TextField>
  <TextField fx:id="emailField" prefHeight="40.0" promptText="Email">
    <font>
      <Font size="13.0" />
    </font>
  </TextField>
  <PasswordField fx:id="registerPasswordField" prefHeight="40.0" promptText="Password">
    <font>
      <Font size="13.0" />
    </font>
  </PasswordField>
  <PasswordField fx:id="confirmPasswordField" prefHeight="40.0" promptText="Confirm Password">
    <font>
      <Font size="13.0" />
    </font>
  </PasswordField>
  <Button alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" prefHeight="50.0" text="Create Account">
    <font>
      <Font size="14.0" />
    </font>
    <VBox.margin>
      <Insets />
    </VBox.margin>
  </Button>
  <Text accessibleRole="BUTTON" layoutX="146.0" layoutY="115.0" styleClass="primary-color" text="Log In" onMouseClicked="#goToRegister">
    <font>
      <Font size="13.0" />
    </font>
  </Text>
  <styleClass>
    <String fx:value="form" />
    <String fx:value="border-radius" />
  </styleClass>
</VBox>
