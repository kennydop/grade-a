<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefWidth="250.0" styleClass="card" stylesheets="@style.css"
  xmlns="http://javafx.com/javafx/20.0.1"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradea.QuizCardController">
  <children>
    <VBox alignment="CENTER" spacing="5.0" StackPane.alignment="CENTER">
      <children>
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="@quiz_art.png" />
          </image>
        </ImageView>
        <VBox spacing="10.0">
          <children>
            <Label fx:id="nameLabel" styleClass="text-color" text="CSC321 - Quiz 1 (22/23)">
              <font>
                <Font name="Montserrat Bold" size="14.0" />
              </font>
            </Label>
            <Label fx:id="descriptionLabel" styleClass="text-color" text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime commodi repudian..." wrapText="true">
              <font>
                <Font name="Montserrat Regular" size="12.0" />
              </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
              <children>
                <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@clock.png" />
                  </image>
                </ImageView>
                <Label fx:id="dueDateLabel" text="Due in 14 days" />
              </children>
            </HBox>
            <Button fx:id="viewQuizButton" alignment="BASELINE_CENTER" mnemonicParsing="false" prefHeight="50.0" styleClass="fill-width" text="View Quiz" VBox.vgrow="ALWAYS">
              <font>
                <Font name="Montserrat Bold" size="12.0" />
              </font>
            </Button>
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
          </padding>
        </VBox>
      </children>
    </VBox>
  </children>
</StackPane>
